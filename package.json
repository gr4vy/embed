{
  "name": "@gr4vypop/embed",
  "version": "0.0.6",
  "description": "The Gr4vy embedded payment form, for usage in a React app.",
  "main": "cjs/index.js",
  "module": "react/index.js",
  "author": "Gr4vy <code@gr4vy.com>",
  "license": "MIT",
  "scripts": {
    "build:package": "concurrently 'yarn build:cjs' 'yarn build:react' 'yarn build:react-umd'",
    "build:cjs": "webpack --config webpack/cjs.js",
    "build:umd": "webpack --config webpack/umd.js",
    "build:react": "babel src --ignore 'src/umd/*.js' --ignore 'src/dev.js' --out-dir react --copy-files --no-copy-ignored",
    "build:react-umd": "webpack --config webpack/react-umd.js",
    "clean": "rm -rf umd react cjs react-umd storybook-static *.tgz static coverage",
    "dev": "concurrently 'yarn start' 'yarn storybook' 'yarn test:watch'",
    "lint": "yarn lint:css; yarn lint:js",
    "lint:js": "yarn eslint src/**/*js tests/**/*js stories/**/*.js webpack/**/*.js .storybook/**/*.js *.js",
    "lint:css": "yarn stylelint src/**/*.scss",
    "release": "yarn version; git push --tags; git push",
    "start": "webpack-dev-server --config webpack/dev-react.js",
    "start:umd": "webpack-dev-server --config webpack/dev-umd.js",
    "storybook": "start-storybook -p 6007",
    "storybook:build": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watchAll --collect-coverage"
  },
  "files": [
    "cjs/**/*",
    "react/**/*",
    "react-umd/**/*"
  ],
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@storybook/addon-actions": "^6.0.5",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-knobs": "^6.0.5",
    "@storybook/addon-links": "^6.0.5",
    "@storybook/addon-storyshots": "^6.0.5",
    "@storybook/addons": "^6.0.5",
    "@storybook/react": "^6.0.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-css-modules": "^5.2.6",
    "concurrently": "^5.2.0",
    "css-loader": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.5.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-react": "^7.20.3",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.3.0",
    "jest-css-modules": "^2.1.0",
    "nock": "^13.0.3",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.32",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "svg-url-loader": "^6.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "framebus": "^4.0.2"
  }
}
